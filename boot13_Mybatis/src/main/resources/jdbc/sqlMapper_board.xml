<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.boot13_mybatis.board.BoardMapper">

    <select id="selectAll" resultType="org.example.boot13_mybatis.board.BoardVO">
        select * from board
        order by num desc limit #{startRow},#{limit}
    </select>

    <select id="searchListWriter" resultType="org.example.boot13_mybatis.board.BoardVO">
        select * from board
        where writer like #{searchWord}
        order by num desc limit #{startRow},#{limit}
    </select>

    <select id="searchListWdate" resultType="org.example.boot13_mybatis.board.BoardVO">
        select * from board
        where wdate like #{searchWord}
        order by num desc limit #{startRow},#{limit}
    </select>

    <select id="selectOne" resultType="org.example.boot13_mybatis.board.BoardVO">
        select * from board
        where num = #{num}
    </select>

    <insert id="insertOK">
        insert into board(title,content,writer,wdate)
        values(#{title},#{content},#{writer},#{wdate})
    </insert>

    <update id="updateOK">
        update board set title=#{title},content=#{content},writer=#{writer},wdate=#{wdate}
        where num=#{num}
    </update>

    <delete id="deleteOK">
        delete from board
        where num=#{num}
    </delete>

</mapper>